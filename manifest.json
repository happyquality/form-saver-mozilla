{
  "manifest_version": 2,
  "name": "Local Form Profiles",
  "version": "0.1.0",
  "description": "Save/Fill multiple form inputs locally (no network).",
  "permissions": ["storage"],
  "background": { "scripts": ["bg.js"] },
  "browser_action": { "default_title": "Form Profiles", "default_popup": "options.html" },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "run_at": "document_idle"
  }],
  "commands": {
    "save_profile": { "suggested_key": { "default": "Ctrl+Alt+S" }, "description": "Save form" },
    "load_profile": { "suggested_key": { "default": "Ctrl+Alt+L" }, "description": "Load form" }
  }
}
